<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnUpdateClose"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:src="@color/red" />

    <RelativeLayout
        android:id="@+id/updateTitle"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/btnUpdateClose"
        android:layout_marginTop="-22dp"
        android:background="@color/red"
        android:gravity="bottom">

        <TextView
            android:id="@+id/txtUpdateVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="34dp"
            android:textColor="#fff"
            android:textSize="11sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/updateContent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/updateTitle"
        android:background="#fff"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:scrollbars="none">

        <TextView
            android:id="@+id/txtUpdateContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingMultiplier="1.3"
            android:textColor="#535353" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateContent"
        android:background="@color/yellow"
        android:padding="20dp">

        <Button
            android:id="@+id/btnUpdateYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:padding="10dp"
            android:text="极速升级"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>