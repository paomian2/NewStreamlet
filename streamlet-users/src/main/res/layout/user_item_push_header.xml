<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText,RtlHardcoded"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_img_user"
                android:background="@drawable/user_border_circle_user"
                android:textSize="32sp"
                android:text="林"
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_width="90dp"
                android:layout_height="90dp" />
            <com.linxz.core.widget.CircleImageView
                android:id="@+id/img_user"
                android:visibility="visible"
                android:layout_gravity="center"
                android:src="@color/pink"
                android:layout_width="90dp"
                android:layout_height="90dp" />
            <android.support.v7.widget.AppCompatTextView
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="用户名"
                android:textColor="@color/white"
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.AppCompatTextView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="职称：Android小菜鸟"
            android:id="@+id/tv_user_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/layout_attention"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <com.joanzapata.iconify.widget.IconTextView
                android:text="{user-studycoin}"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatTextView
                android:text="关注"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/layout_chat"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_height="60dp">
            <com.joanzapata.iconify.widget.IconTextView
                android:text="{user-studycoin}"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatTextView
                android:text="关注"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.LinearLayoutCompat>

    </RelativeLayout>


</android.support.v7.widget.LinearLayoutCompat>
